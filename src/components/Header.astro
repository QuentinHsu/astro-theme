---
import { borders, classnames, fontWeight, padding } from 'tailwindcss-classnames'
import { SITE_TITLE } from '../consts'
import HeaderLink from './HeaderLink.astro'
import { ModeToggle } from '@/components/ModeToggle'
import '@/styles/global.css'

const styleHeaderLink = classnames(padding('py-4', 'px-2'), borders('border-b-4', 'border-transparent'), fontWeight('active:font-bold'))
---

<header class={padding('px-4')}>
  <nav class="flex items-center justify-between">
    <h2 class="text-lg m-0">
      <HeaderLink href="/">
        <img src="https://avatars.githubusercontent.com/u/21162238" alt={SITE_TITLE} class="h-8 rounded-full" />
      </HeaderLink>
    </h2>
    <div class="internal-links flex items-center space-x-4">
      <HeaderLink href="/blog" class={styleHeaderLink}>Blog</HeaderLink>
      <ModeToggle client:load />
    </div>
  </nav>
</header>
