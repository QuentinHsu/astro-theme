---
import { padding } from 'tailwindcss-classnames'
import { SITE_TITLE } from '../consts'
import HeaderLink from './HeaderLink.astro'
import { ModeToggle } from '@/components/ModeToggle'
import '@/styles/global.css'
---

<header class={padding('px-4')}>
  <nav class="flex items-center justify-between">
    <h2 class="text-lg m-0">
      <HeaderLink href="/">{SITE_TITLE}</HeaderLink>
    </h2>
    <div class="internal-links flex items-center space-x-4">
      <HeaderLink href="/" class="py-4 px-2 border-b-4 border-transparent hover:border-accent active:font-bold">Home</HeaderLink>
      <HeaderLink href="/blog" class="py-4 px-2 border-b-4 border-transparent hover:border-accent active:font-bold">Blog</HeaderLink>
      <HeaderLink href="/about" class="py-4 px-2 border-b-4 border-transparent hover:border-accent active:font-bold">About</HeaderLink>
      <ModeToggle client:load />
    </div>
  </nav>
</header>
