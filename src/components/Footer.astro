---
import { alignItems, classnames, display, flexDirection, fontFamily, fontSize, justifyContent, space, width } from 'tailwindcss-classnames'
import IconAstro from '@/components/icon/Astro.tsx'
import WaveReveal from '@/components/animata/text/wave-reveal';
---

<footer>
  <div class={classnames(display('flex'), flexDirection('flex-col'), justifyContent('justify-center'), alignItems('items-center'), space('space-y-2'))}>
    <WaveReveal
      text="人生本就過的不愉快 那就來點羅曼蒂克。"
      className={classnames(fontSize('md:text-2xl', 'text-sm'), fontFamily('font-serif'))}
    />
    <WaveReveal
      text="Life is already unpleasant, so let's have some romance."
      duration="2000ms"
      className={classnames(fontSize('md:text-2xl', 'text-sm'), fontFamily('font-serif'))}
    />
    <a href="https://github.com/withastro/astro" target="_blank" title="Astro on GitHub">
      <div class={classnames(width('w-16'))}>
        <IconAstro />
      </div>
    </a>
  </div>
</footer>
<style>
  footer {
    padding: 2em 1em 6em 1em;
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin-top: 1em;
  }
  .social-links a {
    text-decoration: none;
    color: rgb(var(--gray));
  }
  .social-links a:hover {
    color: rgb(var(--gray-dark));
  }
</style>
